<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <main class="p-8 bg-gray-100 dark:bg-gray-800 h-screen w-screen">
      <div class="flex items-center justify-between">
        <button
          onclick="showPopup()"
          class="bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded cursor-pointer"
        >
          Upload file
        </button>
        <a
          role="button"
          href="/user/logout"
          class="bg-gray-700 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded cursor-pointer"
        >
          Logout
        </a>
      </div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white mt-4">
        Your Files
      </h1>
      <div
        class="pop hidden backdrop-blur fixed top-0 left-0 w-screen h-screen flex items-center justify-center"
      >
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="flex items-center justify-center w-96">
            <label
              for="dropzone-file"
              class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600"
            >
              <div class="flex flex-col items-center justify-center pt-5 pb-6">
                <svg
                  class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 20 16"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"
                  />
                </svg>
                <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
                  <span class="font-semibold">Click to upload</span> or drag and
                  drop
                </p>
                <p class="text-xs text-gray-500 dark:text-gray-400">
                  File types supported: .png, .jpg, .jpeg, .pdf, .docx
                  <br />
                  Max file size: 1MB
                </p>
              </div>
              <input
                id="dropzone-file"
                type="file"
                name="file"
                class="hidden"
              />
              <div id="file-preview" class="pt-1"></div>

              <script>
                const dropzoneInput = document.getElementById("dropzone-file");
                const preview = document.getElementById("file-preview");

                function showDefault() {
                  preview.innerHTML = `<div class="pt-2 text-gray-400 dark:text-gray-500 text-center">No file selected</div>`;
                }

                dropzoneInput.addEventListener("change", function (e) {
                  const file = e.target.files[0];
                  if (!file) {
                    showDefault();
                    return;
                  }
                  // Show filename and replace default div
                  preview.innerHTML = `<div class="pt-2 font-medium text-gray-700 dark:text-gray-200 text-center">Selected file: ${file.name} (${Math.round(file.size/1024)}KB)</div>`;
                });

                // Show default on page load
                showDefault();
              </script>
            </label>
          </div>
          <button
            type="submit"
            class="mt-4 bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded cursor-pointer"
          >
            Upload
          </button>
        </form>
        <button onclick="hidePopup()" class="absolute top-5 right-5">
          <i
            class="ri-close-large-line cursor-pointer text-gray-500 hover:text-gray-400 text-2xl font-bold"
          ></i>
        </button>
      </div>
      <div class="files flex flex-col gap-2 mt-4">
        <% if (!files || files.length === 0) { %>
        <div class="text-gray-500 dark:text-gray-400 text-center py-2">
          No files uploaded yet.
        </div>
        <% } else { %> <% files.forEach(file => {%>
        <div
          class="grid grid-cols-5 items-center py-2 px-4 rounded-md bg-white dark:bg-gray-800 shadow hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-900 dark:text-white"
        >
          <h1 class="col-span-2 font-medium truncate">
            <%= file.originalname %>
          </h1>
          <span class="text-sm text-gray-500 dark:text-gray-400"
            ><%= file.size %> KB</span
          >
          <span class="text-sm text-gray-500 dark:text-gray-400"
            ><%= file.mimetype %></span
          >
          <div class="flex items-center gap-4 justify-end">
            <a href="/file/<%= file._id %>">
              <i
                class="ri-eye-line text-blue-500 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300"
              ></i>
            </a>
            <form
              action="/file/<%= file._id %>"
              method="POST"
              onsubmit="return deleteFile(event, '<%= file._id %>')"
            >
              <button type="submit" style="background: none; border: none">
                <i
                  class="ri-delete-bin-line text-red-500 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300"
                ></i>
              </button>
            </form>
            <a
              href="/download/<%= file.path %>"
              download="<%= file.originalname %>"
              ><i
                class="ri-download-line text-green-500 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300"
              ></i
            ></a>
          </div>
        </div>
        <% }) %> <% } %>
      </div>
    </main>
    <script>
      // AJAX delete file
      function deleteFile(event, fileId) {
        event.preventDefault();
        if (confirm("Are you sure you want to delete this file?")) {
          fetch(`/file/${fileId}`, {
            method: "DELETE",
            headers: {
              "Content-Type": "application/json",
            },
          })
            .then(res => res.json())
            .then(data => {
              if (data.message === "File deleted successfully") {
                window.location.reload();
              } else {
                alert("Error deleting file");
              }
            })
            .catch(() => alert("Error deleting file"));
        }
        return false;
      }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
    <script>
      function showPopup() {
        document.querySelector(".pop").classList.remove("hidden");
      }

      function hidePopup() {
        document.querySelector(".pop").classList.add("hidden");
      }
    </script>
  </body>
</html>
